@model IEnumerable<productApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}


    <!--
        <a asp-action="Create">Create New</a>
    -->
<section class="w-100 row row-cols-5 row-cols-lg-4 column-gap-2  row-gap-4">
    @foreach (var item in Model)
    {
        <article class="col card bg-white p-2 border border border-light-subtle shadow  rounded">
            <header class="card-header">
                <figure>
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" class=" card-img-top" alt="" />
                </figure>
            </header>
            <div class="card-body">
                <!--product_name-->
                <h2 class="product_name">@Html.DisplayFor(modelItem => item.Name)</h2>
                <div class="product_category border bg-success-subtle border-0 rounded text-center p-1">@Html.DisplayFor(modelItem => item.ProductCategory)</div>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <div class="d-flex flex-row justify-content-between px-1 ">
                    <strong class="product_price">$@Html.DisplayFor(modelItem => item.Price)</strong>
                    <div>
                        +
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="product_icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                        </svg>
                    </div>
                </div>
            </div>
        </article> 
    }
</section>